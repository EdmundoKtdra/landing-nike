---
import MainLayout from "../layouts/MainLayout.astro";
import Card from "../components/Card.astro";
import WordRotateDemo from "../components/WordRotate.astro";

const FeatureCard = [
  {
    id: 1,
    img: "https://img.daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.webp",
    description:
      "La leyenda sigue viva con las Air Max 90. Comodidad, estilo inconfundible y la amortiguación Air que ya conoces y amas.",
    text: "AIR MAX 90",
    action: "TOP",
  },
  {
    id: 2,
    img: "https://img.daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.webp",
    description:
      "Diseñadas para el movimiento. Las Nike Revolution combinan una amortiguación suave con un diseño transpirable para tu rutina diaria.",
    text: "NIKE REVOLUTION",
    action: "OFERTA",
  },
  {
    id: 3,
    img: "https://img.daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.webp",
    description:
      "El par que lo inició todo. Las Air Jordan 1 Low ofrecen un estilo clásico inspirado en la cancha con materiales premium.",
    text: "AIR JORDAN 1",
    action: "NUEVO",
  },
];
---

{/* Contenido principal */}
<MainLayout>
  <section class="bg-white py-24">
      <h2 class="text-2xl md:text-3xl font-black italic tracking-tight text-slate-900 mb-8 text-center">
        Checa nuestros modelos más vendidos
      </h2>
    <div class="max-w-screen-xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12 px-10 justify-items-center">
      {
        FeatureCard.map((item) => (
          <Card
            img={item.img}
            description={item.description}
            text={item.text}
            action={item.action}
          />
        ))
      }
    </div>
  </section>
  <WordRotateDemo />
</MainLayout>
